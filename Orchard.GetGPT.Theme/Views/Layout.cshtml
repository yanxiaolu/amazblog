<!DOCTYPE html>

<html lang="@Orchard.CultureName()">
<head>
    <title>@RenderTitleSegments(Site.SiteName, "before")</title>
    <!-- resources type="Meta" -->
    <resources type="Meta"/>
    <!-- resources type="HeadLink" -->
    <resources type="HeadLink"/>
    <!-- resources type="HeadScript" -->
    <resources type="HeadScript"/>
    <!-- resources type="Stylesheet" -->
    <resources type="Stylesheet"/>
    <!-- RenderSectionAsync("HeadMeta", required: false) -->
    @await RenderSectionAsync("HeadMeta", required: false)
    <meta asp-name="description" content="This is a GetGPT website"/>
</head>
<body dir="@Orchard.CultureDir()">
<nav class="navbar navbar-expand-lg navbar-dark fixed-top" id="mainNav">
    <div class="container">
        <a class="navbar-brand" href="/">@Site.SiteName</a>
        <button class="navbar-toggler navbar-toggler-right" type="button" data-bs-toggle="collapse" data-bs-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">
            {{ "Menu" | t }}
            <i class="fas fa-bars ms-1" aria-hidden="true"></i>
        </button>
        <menu alias="alias:main-menu" cache-id="main-menu" cache-fixed-duration="00:05:00" cache-tag="alias:main-menu"/>
    </div>
</nav>
<!-- Render Header -->
@await RenderSectionAsync("Header", required: false)

<!-- Render body async-->
@* @await RenderBodyAsync() *@

<!-- resources type="FootScript" -->
<resources type="FootScript"/>
</body>
</html>