<!doctype html>
<html lang="{{ Culture.Name }}">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{% page_title Site.SiteName, position: "before", separator: " | " %}</title>
    {% comment %} 请求加载 Apple Style CSS {% endcomment %}
    {% style name:"bookingtheme-apple-style" %}
    {% comment %} 主题 CSS {% endcomment %}

    {% resources type: "Meta" %}
    {% resources type: "HeadLink" %}
    {% resources type: "Stylesheet" %}
    {% resources type: "HeadScript" %}

    {% comment %} Google Fonts (Optional, for Apple-like font)  {% endcomment %}
    <link rel="preconnect" href="https://fonts.googleapis.com">

    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>

    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600&display=swap" rel="stylesheet">

    {% comment %} Header area end  {% endcomment %}
  </head>
  <body class="theme-apple" dir="{{ Culture.Dir }}">
    <header class="site-header">
      <nav class="main-nav">
        <a href="/" class="logo">{{ Site.SiteName | default: 'Events' }}</a>
        <a href="/events">Events</a>
      </nav>
    </header>

    <main class="site-content">
      {% render_body %}
    </main>

    <footer class="site-footer">
      {# --- foot Style CSS --- #}
      <p>
        &copy; {{ 'now' | date: '%Y' }}
        {{ Site.SiteName }}. All rights reserved.
      </p>
      {% render_section "Footer", required: false %}
    </footer>
    {% resources type: "FootScript" %}
  </body>
</html>
