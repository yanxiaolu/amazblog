{% assign eventsPart = Model.ContentItem.Content.EventsPart %}
{% assign titlePart = Model.ContentItem.Content.TitlePart %}
{% assign autoroutePart = Model.ContentItem.Content.AutoroutePart %}

<div class="event-card mb-4 border rounded overflow-hidden">
  <div class="row g-0">
    {% if eventsPart.EventBanner.Paths.size > 0 %}
      <div class="col-md-4">
        <img src="{{ eventsPart.EventBanner.Paths.first | asset_url }}" class="img-fluid rounded-start" alt="{{ titlePart.Title }}">
      </div>
    {% endif %}
    
    <div class="col-md-{% if eventsPart.EventBanner.Paths.size > 0 %}8{% else %}12{% endif %}">
      <div class="card-body">
        <h4 class="card-title">
          {% if autoroutePart.Path %}
            <a href="{{ '~/' | append: autoroutePart.Path }}">{{ titlePart.Title }}</a>
          {% else %}
            {{ titlePart.Title }}
          {% endif %}
        </h4>
        
        {% include 'EventDateTime' %}
        
        {% if eventsPart.Location.Text %}
          <p class="card-text"><strong>地点:</strong> {{ eventsPart.Location.Text }}</p>
        {% endif %}
        
        {% if autoroutePart.Path %}
          <a href="{{ '~/' | append: autoroutePart.Path }}" class="btn btn-primary btn-sm">查看详情</a>
        {% endif %}
      </div>
    </div>
  </div>
</div>