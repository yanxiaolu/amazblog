{% assign events = Model.Events %}

<div class="event-list-container">
  <h1 class="page-title">Upcoming Events</h1>

  {% if events.size > 0 %}
    <ul class="event-list">
      {% for event in events %}
        <li class="event-item">
          <a href="{{ event.DetailUrl | href }}" class="event-link">
            {% if event.BannerUrl %}
              <div class="event-banner-wrapper">
                <img
                  src="{{ event.BannerUrl | asset_url }}"
                  alt="{{ event.Title }}"
                  class="event-banner"
                  width="600"
                  height="400"
                >
              </div>
            {% endif %}
            <div class="event-details">
              <h2 class="event-title">{{ event.Title }}</h2>
              <p class="event-date">
                {{ event.StartDate | date: '%B %d, %Y' }}
                {% if event.EndDate and event.EndDate != event.StartDate %}
                  â€“ {{ event.EndDate | date: '%B %d, %Y' }}
                {% endif %}
              </p>
              {% if event.Place %}
                <p class="event-location">{{ event.Place }}</p>
              {% endif %}
            </div>
          </a>
        </li>
      {% endfor %}
    </ul>
  {% else %}
    <p class="no-events-message">Check back soon for upcoming events.</p>
  {% endif %}
</div>
